<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.z201.Controller" >
    <children>
        <!-- 开始布局 -->
        <BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                    AnchorPane.topAnchor="0">
            <!-- 左边 ONLINE_USER_LIST -->
            <right>
                <TreeView fx:id="onlineUserTableView" editable="true" BorderPane.alignment="CENTER" prefWidth="100">
                    <BorderPane.margin>
                        <Insets right="5.0"/>
                    </BorderPane.margin>
                </TreeView>
            </right>
            <!--上面-->
            <top>
                <HBox>
                    <children>
                        <TextField fx:id="username" prefHeight="27.0" prefWidth="155.0"
                                   disable="false" promptText="test" text="test">
                        </TextField>
                        <TextField fx:id="password" prefHeight="27.0" prefWidth="155.0"
                                   disable="false" promptText="test" text="test">
                        </TextField>
                    </children>

                    <ToggleButton fx:id="monitoring" mnemonicParsing="false" onAction="#monitoringAction"
                                  prefHeight="30.0"
                                  prefWidth="100.0" text="联网"/>
                    <Button fx:id="exit" mnemonicParsing="false" onAction="#exitAction" prefHeight="30.0"
                            prefWidth="110.0" text="退出"/>


                </HBox>
            </top>
            <!--中间-->
            <center>
                <VBox>
                    <TextArea fx:id="textArea" disable="false" prefHeight="570"/>
                    <HBox>
                        <TextArea fx:id="speak" disable="false"/>
                        <Button fx:id="sendMsg" mnemonicParsing="false" onAction="#sendMsg" prefHeight="70.0"
                                prefWidth="70" text="发送"/>
                    </HBox>

                </VBox>
            </center>
            <!-- 下面 -->
            <bottom>
                <HBox>
                    <Text fx:id="text" strokeType="OUTSIDE" strokeWidth="0.0"/>
                    <Button mnemonicParsing="false" onAction="#cleanConsoleAction" prefHeight="30.0"
                            prefWidth="110.0" text="清理控制台"/>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
    <padding>
        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0"/>
    </padding>
</AnchorPane>
